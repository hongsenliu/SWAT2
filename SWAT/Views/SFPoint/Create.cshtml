@model SWAT.Models.tblswatsfpoint

@{
    ViewBag.Title = "New Assessment";
}

<h2>New Assessment - Sanitation Facilities</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sanitation Points Assessment</legend>
        @Html.HiddenFor(model => model.SurveyID, new { SurveyID=ViewBag.SurveyID})

        <p>
            @ViewBag.Question1
        </p>
        <div class="editor-field">
            @Html.DropDownList("sanType", String.Empty)
            @Html.ValidationMessageFor(model => model.sanType)
        </div>

        <hr />
        <p>
            @ViewBag.Question2
        </p>
        <div class="editor-label">
            @Html.LabelFor(model => model.sanUseInd)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sanUseInd)
            @Html.ValidationMessageFor(model => model.sanUseInd)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sanUsePub)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sanUsePub)
            @Html.ValidationMessageFor(model => model.sanUsePub)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SanUseCom)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SanUseCom)
            @Html.ValidationMessageFor(model => model.SanUseCom)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p>
                    <br />
                    <input type="submit" name="submitBtn" value="Save" class="btn btn-default" />
                    <input type="submit" name="submitBtn" value="Next" class="btn btn-default" />
                </p>
            </div>
        </div>
    </fieldset>
}

