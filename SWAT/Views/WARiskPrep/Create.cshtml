@model SWAT.Models.tblswatwariskprep

@{
    ViewBag.Title = "New Assessment";
}

@section Scripts
{
  <script src="@Url.Content("~/Content/WARiskPrep.js")" type="text/javascript"></script>
}

<h2>New Assessment - Water Availability</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Climate and Rainwater - Part VI</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SurveyID, new { SurveyID=ViewBag.SurveyID})
        <p>
            How would you rate (a) the risk of and (b) your preparedness for the following emergencies that may threaten your water security?
        </p>
        <hr />
        <p>
            <b>Part (a)</b>
        </p>

        <div class="form-group">
            @Html.LabelFor(model => model.riskFire, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("riskFire", (SelectList)ViewBag.riskFire, String.Empty, new { @onchange = "showOrHidePrep();"})
                @Html.ValidationMessageFor(model => model.riskFire)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.riskFlood, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("riskFlood", (SelectList)ViewBag.riskFlood, String.Empty, new { @onchange = "showOrHidePrep();"})
                @Html.ValidationMessageFor(model => model.riskFlood)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.riskDrought, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("riskDrought", (SelectList)ViewBag.riskDrought, String.Empty, new { @onchange = "showOrHidePrep();"})
                @Html.ValidationMessageFor(model => model.riskDrought)
            </div>
        </div>

        <hr />
        <p>
            <b>Part (b)</b>
        </p>

        <div class="form-group">
            @Html.LabelFor(model => model.prepFire, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("prepFire", String.Empty)
                @Html.ValidationMessageFor(model => model.prepFire)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.prepFlood, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("prepFlood", String.Empty)
                @Html.ValidationMessageFor(model => model.prepFlood)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.prepDrought, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("prepDrought", String.Empty)
                @Html.ValidationMessageFor(model => model.prepDrought)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="submitBtn" value="Save" class="btn btn-default" />
                <input type="submit" name="submitBtn" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
}

