@model SWAT.Models.tblswatwaannualprecip

@{
    ViewBag.Title = "Edit";
}

@section Scripts
{
  <script src="@Url.Content("~/Content/WAannualPrecip.js")" type="text/javascript"></script>
}

<h2>Edit - Water Availability</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Climate and Rainwater - Part III</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.SurveyID, new { SurveyID=ViewBag.SurveyID})
        <p>
            How variable is precipitation from year to year?
        </p>
        <hr />
        <p>
            If data are available, please indicate the standard deviation of annual precipitation (in mm).
        </p>

        <div class="form-group">
            @Html.LabelFor(model => model.precipVar, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.precipVar, new { @onchange = "greyOutPrecipitation();"})
                @Html.ValidationMessageFor(model => model.precipVar)
            </div>
        </div>
        <hr />
        <p>
            OR if data are unavailable, choose one of the following:
        </p>
        <div class="form-group">
            @Html.LabelFor(model => model.precipVarALT, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("precipVarALT", (SelectList)ViewBag.precipVarALT, String.Empty, new { @onchange = "greyOutPrecipitation();"})
                @Html.ValidationMessageFor(model => model.precipVarALT)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

