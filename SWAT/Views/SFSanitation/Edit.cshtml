@model SWAT.Models.tblswatsfsanitation

@{
    ViewBag.Title = "Edit";
}

<h2>Edit - Sanitation Facilities</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
