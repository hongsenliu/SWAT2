@model SWAT.Models.tblswatbackgroundinfo

@{
    ViewBag.Title = "New Assessment";
}
@section Scripts
{
  <script src="@Url.Content("~/Content/CommunityInfo.js")" type="text/javascript"></script>
}
<h2>New Assessment - Community Information</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Location and Demographic Information</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SurveyID, new { SurveyID=ViewBag.SurveyID})
        <div class="form-group">
            @Html.LabelFor(model => model.ClimateID, "Climate", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClimateID", String.Empty)
                @Html.ValidationMessageFor(model => model.ClimateID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SoilID, "Soil", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("SoilID", String.Empty)
                @Html.ValidationMessageFor(model => model.SoilID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EcoregionID, "Ecoregion", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("EcoregionID", String.Empty)
                @Html.ValidationMessageFor(model => model.EcoregionID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.WatershedID, "Watershed", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("WatershedID", String.Empty)
                @Html.ValidationMessageFor(model => model.WatershedID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AridityID, "Aridity", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AridityID", String.Empty)
                @Html.ValidationMessageFor(model => model.AridityID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UrbanDistanceID, "UrbanDistance", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div>
                    On average, how long does it take to get to the nearest city or trading centre using the most common means of transportation?
                </div>
                @Html.DropDownList("UrbanDistanceID", String.Empty)
                @Html.ValidationMessageFor(model => model.UrbanDistanceID)
            </div>
            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Population, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Population, new { @onchange="pplPerHH();"})
                @Html.ValidationMessageFor(model => model.Population)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.numHouseholds, "Number of Households", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.numHouseholds, new { @onchange="pplPerHH();"})
                @Html.ValidationMessageFor(model => model.numHouseholds)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.numChildren, "Number of Children (under age 15)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.numChildren)*@
                @Html.TextBoxFor(model => model.numChildren)
                @Html.ValidationMessageFor(model => model.numChildren)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PeoplePerHH, "People Per Household", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PeoplePerHH)
                @Html.ValidationMessageFor(model => model.PeoplePerHH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isEconAg, "Agriculture", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div>
                    Is your community located in an agricultural region or does more than 5% of your community work in agriculture?
                </div>
                @Html.DropDownList("isEconAg", String.Empty)
                @Html.ValidationMessageFor(model => model.isEconAg)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isEconLs, "Livestock", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div>
                    Does your community raise livestock (commercial or domestic)?
                </div>
                @Html.DropDownList("isEconLs", String.Empty)
                @Html.ValidationMessageFor(model => model.isEconLs)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isEconDev, "Development Sites", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div>
                    Are there development sites (mines, landfills, industrial facilities, etc.) within or upstream of your community?
                </div>
                @Html.DropDownList("isEconDev", String.Empty)
                @Html.ValidationMessageFor(model => model.isEconDev)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.isEconPris, "Pristine Watershed", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div>
                    Does your community have a pristine watershed upstream? Select "yes" if there are no other major communities or industries polluting your water.
                </div>
                @Html.DropDownList("isEconPris", String.Empty)
                @Html.ValidationMessageFor(model => model.isEconPris)
            </div>
        </div>

        <hr />
        <h4>Community Land Cover</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Area, "Area of Community (km^2) ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Area)
                @Html.ValidationMessageFor(model => model.Area)
            </div>
        </div>
        <div>
            <p>
                Please indicate approximately what percentage of your community area is composed of each of the following:
            </p>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AreaForest, "Forest (%)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaForest)
                @Html.ValidationMessageFor(model => model.AreaForest)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaAgC, "Commercial Agriculture (%)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaAgC)
                @Html.ValidationMessageFor(model => model.AreaAgC)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaAgH, "Hobby/Subsistence Agriculture (%)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaAgH)
                @Html.ValidationMessageFor(model => model.AreaAgH)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaPaved, "Paved Cover (%)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaPaved)
                @Html.ValidationMessageFor(model => model.AreaPaved)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaInf, "Infrastructure (%)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaInf)
                @Html.ValidationMessageFor(model => model.AreaInf)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaSw, "Surface Water (%)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaSw)
                @Html.ValidationMessageFor(model => model.AreaSw)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaWet, "Wetlands (%)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaWet)
                @Html.ValidationMessageFor(model => model.AreaWet)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaNat, "Native or Natural Lands (%)", new { @class = "control-label col-md-2" })
            <br />
            <div class="col-md-10">
                @Html.EditorFor(model => model.AreaNat)
                @Html.ValidationMessageFor(model => model.AreaNat)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaProtID, "Land Under Protected Status (%)", new { @class = "control-label col-md-2" })
            <br />
            <div class="col-md-10">
                @Html.DropDownList("AreaProtID", String.Empty)
                @Html.ValidationMessageFor(model => model.AreaProtID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AreaBmID, "Area Under Best Management Practices (%)", new { @class = "control-label col-md-2" })
            <br />
            <div class="col-md-10">
                @Html.DropDownList("AreaBmID", String.Empty)
                @Html.ValidationMessageFor(model => model.AreaBmID)
            </div>
        </div>

        <hr />
        <h4>Priorities</h4>
        <hr />
        <div>
            <p>
                What do you see as your most critical water-related issues? Please rank the importance of each:
            </p>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PriorQuality, "Water Quality ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PriorQuality", String.Empty)
                @Html.ValidationMessageFor(model => model.PriorQuality)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriorQuan, "Water Quantity", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PriorQuan", String.Empty)
                @Html.ValidationMessageFor(model => model.PriorQuan)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriorSeasonal, "Season Variability", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PriorSeasonal", String.Empty)
                @Html.ValidationMessageFor(model => model.PriorSeasonal)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriorPolitics, "Politics/Governance", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PriorPolitics", String.Empty)
                @Html.ValidationMessageFor(model => model.PriorPolitics)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriorHealth, "Health", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PriorHealth", String.Empty)
                @Html.ValidationMessageFor(model => model.PriorHealth)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriorFinances, "Finances", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PriorFinances", String.Empty)
                @Html.ValidationMessageFor(model => model.PriorFinances)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriorAccessible, "Accessbility", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PriorAccessible", String.Empty)
                @Html.ValidationMessageFor(model => model.PriorAccessible)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PriorEquity, "Equity", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PriorEquity", String.Empty)
                @Html.ValidationMessageFor(model => model.PriorEquity)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="submitBtn" value="Save" class="btn btn-default" />
                <input type="submit" name="submitBtn" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
}

