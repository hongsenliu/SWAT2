@model SWAT.Models.tblswatwaextremeevent

@{
    ViewBag.Title = "New Assessment";
}

@section Scripts
{
  <script src="@Url.Content("~/Content/WAExtremeEvent.js")" type="text/javascript"></script>
}

<h2>New Assessment - Water Availability</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Climate and Rainwater - Part V</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SurveyID, new { SurveyID=ViewBag.SurveyID})
        
        <p>
            In the past 50 years, have any of the following extreme or unusual events affected the community's access to water? If so, what were the impacts on your community?
        </p>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.extremeDry, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("extremeDry", String.Empty)
                @Html.ValidationMessageFor(model => model.extremeDry)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.extremeFlood, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("extremeFlood", String.Empty)
                @Html.ValidationMessageFor(model => model.extremeFlood)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.extremeOther, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("extremeOther", (SelectList)ViewBag.extremeOther, String.Empty, new { @onchange = "showOrHideOtherEvent();"})
                @Html.ValidationMessageFor(model => model.extremeOther)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.extremeOtherComment, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.extremeOtherComment)
                @Html.ValidationMessageFor(model => model.extremeOtherComment, String.Empty, new { @id = "extremeOtherCommentErrMsg"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="submitBtn" value="Save" class="btn btn-default" />
                <input type="submit" name="submitBtn" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
}

