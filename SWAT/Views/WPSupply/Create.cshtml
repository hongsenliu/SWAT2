@model SWAT.Models.tblswatwpsupply

@{
    ViewBag.Title = "Create";
}

<h2>Create - Water Points Assessment</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Water supply, demand, and accessibility</legend>
        @Html.HiddenFor(model => model.wpID, new { wpID = ViewBag.wpID })

        @{
            Html.RenderPartial("_General", Model);

            if (ViewBag.dom)
            {
                Html.RenderPartial("_Domestic", Model);
            }
            if (ViewBag.inst)
            {
                Html.RenderPartial("_Inst", Model);
            }
            if (ViewBag.eco)
            {
                Html.RenderPartial("_Eco", Model);
            }
            Html.RenderPartial("_All", Model);
         }
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <p>
                    <br />
                    <input type="submit" value="Next" class="btn btn-default" />
                </p>
            </div>
        </div>
    </fieldset>
}

